{
  "extends": "./node_modules/gts/",
  "rules": {
    "sort-imports": "error",
    "object-property-newline": [
      "error",
      {
        "allowAllPropertiesOnSameLine": true
      }
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": [
          "@azure/functions"
        ]
      }
    ]
  }
}
